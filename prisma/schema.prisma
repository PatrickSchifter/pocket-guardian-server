generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
// Modelo para um usuário
model User {
  id        String    @id @default(uuid())@map("_id")
  email     String    @unique
  password  String
  confirmed Boolean   @default(false)
  name      String
  expenses  Expense[] // Relação um-para-muitos com despesas
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  groupUser GroupUser[]

  @@map("user")
}

model GroupUser {
  id String @id @default(uuid())@map("_id")
  userId String
  groupId String
  user       User     @relation(fields: [userId], references: [id])
  group      Group    @relation(fields: [groupId], references: [id])

  @@map("group_user")
}
model Group {
  id        String       @id @default(uuid())@map("_id")
  name      String
  adminId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expenses  Expense[]
  groupUser GroupUser[]

  @@map("group")
}
model Expense {
  id         String       @id @default(uuid())@map("_id")
  title      String
  amount     Float
  type       String
  userId     String
  groupId    String
  status     String
  dueDate    DateTime?
  user       User     @relation(fields: [userId], references: [id])
  group      Group    @relation(fields: [groupId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("expense")
}

model Invite {
  id         String       @id @default(uuid())@map("_id")
  userId     String?
  email      String
  invited_by String
  groupId    String
  createdAt  DateTime @default(now())
  response   Boolean? 

  @@map("invite")
}
